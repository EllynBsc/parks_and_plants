
    <h1>Add a new plant</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">

    <%= simple_form_for [@garden, @plant] do |f| %>
      <%= f.input :name %>
      <%= f.input :price %>
      <%= f.input :image %>
      <%= f.submit class: 'btn btn-primary'%>
    <% end %>
    </div>
  </div>
</div>

